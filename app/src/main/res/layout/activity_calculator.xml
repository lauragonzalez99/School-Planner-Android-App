                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="@string/weight_hint"
                    android:digits="0123456789."
                    android:inputType="phone"/>


            </TableRow>

            <TableRow
                android:id="@+id/grade6" android:visibility="invisible">

                <EditText
                    android:id="@+id/Grade6"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="@string/grade_hint"
                    android:digits="0123456789."
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/Weight6"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="@string/weight_hint"
                    android:digits="0123456789."
                    android:inputType="phone"/>


            </TableRow>

            <TableRow
                android:id="@+id/grade7" android:visibility="invisible">

                <EditText
                    android:id="@+id/Grade7"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="@string/grade_hint"
                    android:digits="0123456789."
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/Weight7"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="@string/weight_hint"
                    android:digits="0123456789."
                    android:inputType="phone"/>


            </TableRow>

            <TableRow
                android:id="@+id/grade8" android:visibility="invisible">

                <EditText
                    android:id="@+id/Grade8"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="@string/grade_hint"
                    android:digits="0123456789."
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/Weight8"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="@string/weight_hint"
                    android:digits="0123456789."
                    android:inputType="phone" />


            </TableRow>

            <TableRow
                android:id="@+id/grade9" android:visibility="invisible">

                <EditText
                    android:id="@+id/Grade9"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="@string/grade_hint"
                    android:digits="0123456789."
                    android:inputType="phone"/>

                <EditText
                    android:id="@+id/Weight9"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="@string/weight_hint"
                    android:digits="0123456789."
                    android:inputType="phone" />

            </TableRow>

            <TableRow
                android:id="@+id/grade10" android:visibility="invisible">

                <EditText
                    android:id="@+id/Grade10"
                    android:layout_width="0dp"
