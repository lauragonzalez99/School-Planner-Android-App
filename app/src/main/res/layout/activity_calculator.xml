<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".CalculatorActivity">

    <LinearLayout
        android:background="@drawable/math_background"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spn_courses"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/calculate_button"
            android:background="#FFFFFF"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="13dp"
            android:layout_marginTop="10dp"
            android:padding="1dp"
            android:text="Calculate" />

    </LinearLayout>




    <ScrollView
        android:id="@+id/four_point_scroll"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_below="@id/spn_courses" >

        <TableLayout
            android:id="@+id/grades"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            tools:context=".CourseActivity" >

            <TableRow
                android:id="@+id/grade1" android:visibility="visible">

                <EditText
                    android:id="@+id/Grade1"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="@string/grade_hint"
                    android:digits="0123456789."
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/Weight1"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="@string/weight_hint"
                    android:digits="0123456789."
                    android:inputType="number">

                    <requestFocus />
                </EditText>

            </TableRow>

            <TableRow
                android:id="@+id/grade2" android:visibility="visible">

                <EditText
                    android:id="@+id/Grade2"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="@string/grade_hint"
                    android:digits="0123456789."
                    android:inputType="phone"/>

                <EditText
                    android:id="@+id/Weight2"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="@string/weight_hint"
                    android:digits="0123456789."
                    android:inputType="phone" />

            </TableRow>

            <TableRow
                android:id="@+id/grade3" android:visibility="invisible">

                <EditText
                    android:id="@+id/Grade3"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="@string/grade_hint"
                    android:digits="0123456789."
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/Weight3"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="@string/weight_hint"
                    android:digits="0123456789."
                    android:inputType="phone" />


            </TableRow>

            <TableRow
                android:id="@+id/grade4" android:visibility="invisible">

                <EditText
                    android:id="@+id/Grade4"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="@string/grade_hint"
                    android:digits="0123456789."
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/Weight4"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="@string/weight_hint"
                    android:digits="0123456789."
                    android:inputType="phone"/>


            </TableRow>

            <TableRow
                android:id="@+id/grade5" android:visibility="invisible">

                <EditText
                    android:id="@+id/Grade5"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
